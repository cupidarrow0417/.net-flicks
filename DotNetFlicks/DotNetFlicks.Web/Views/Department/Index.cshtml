@model DotNetFlicks.ViewModels.Department.DepartmentsViewModel

@{
    ViewBag.Title = "Departments";
}

<div class="d-flex mb-5">
    <h1>@ViewBag.Title <small>(@Model.Departments.Count)</small></h1>
    <a class="btn btn-primary ml-auto my-auto" asp-controller="Department" asp-action="Edit">New</a>
</div>

<div>
    <table class="table data-table">
        <thead>
            <tr>
                <th><h5>@Html.DisplayNameFor(x => Model.Departments.FirstOrDefault().Name)</h5></th>
                <th class="d-none d-sm-table-cell" data-searchable="false"><h5>Roles</h5></th>
                <th width="116" data-sortable="false"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model.Departments)
            {
                <tr>
                    <td class="align-middle">@Html.DisplayFor(x => i.Name)</td>
                    <td class="d-none d-sm-table-cell">@Html.DisplayFor(x => i.PeopleCount)</td>
                    <td>
                        <div class="d-flex">
                            <a class="btn btn-primary" asp-controller="Department" asp-action="Edit" asp-route-id="@i.Id">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-primary ml-2" asp-controller="Department" asp-action="Delete" asp-route-id="@i.Id">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
