@model DotNetFlicks.ViewModels.Department.DepartmentViewModel

@{
    ViewBag.Title = "Delete " + Model.Name;
}

<h1>@ViewBag.Title</h1>
<p class="lead">Are you sure you want to delete @Model.Name?</p>
<br /><br />

<form asp-controller="Department" asp-action="Delete" method="post" class="form-horizontal" role="form">
    <div class="container form-actions no-color">
        @if (Model.People.Count > 0)
        {
            <h4 class="text-danger">@Model.Name cannot be deleted because @Model.People.Count people use it: </h4>
            <p>@Html.Raw(Model.PeopleBulletedList)</p>
        }
        else if (Model.IsDirecting)
        {
            <h4 class="text-danger">@Model.Name cannot be deleted.</h4>
        }
        else
        {
            <input type="submit" value="Delete" class="btn btn-danger" />
        }
        <br /><br />
        <a asp-action="Index">Back to List</a>
    </div>
</form>