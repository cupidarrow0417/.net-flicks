@model DotNetFlicks.ViewModels.Movie.MoviesViewModel

@{
    ViewBag.Title = "Movies";
    ViewData["OnlyPurchasedMovies"] = false;
}

<div class="movie-card-container">
    <div class="d-flex justify-content-end mb-5">
        <h1 class="mr-auto">@ViewBag.Title <small>(@Model.Movies.Count)</small></h1>
        <partial name="_MovieSorter" view-data="@ViewData" />
    </div>

    <div class="mx-auto d-flex flex-wrap justify-content-center justify-content-lg-start" style="max-width: 1088px;">
        @foreach (var movie in Model.Movies)
        {
            @Html.DisplayFor(x => movie, "MovieCard")
        }
    </div>
</div>