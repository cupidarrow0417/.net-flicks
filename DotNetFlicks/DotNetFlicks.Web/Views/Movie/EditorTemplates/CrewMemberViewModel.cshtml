@model DotNetFlicks.ViewModels.Movie.CrewMemberViewModel

<tr class="row">
    <td class="col align-middle">
        <select asp-for="PersonId" asp-items="@Model.People" class="form-control selectpicker" data-live-search="true" data-size="10">
            <option disabled selected>Select</option>
        </select>
    </td>
    <td class="col align-middle">
        <select asp-for="DepartmentId" asp-items="@Model.Departments" class="form-control selectpicker" data-live-search="true" data-size="10">
            <option disabled selected>Select</option>
        </select>
    </td>
    <td class="col align-middle">
        <input asp-for="Position" class="form-control" />
    </td>
    <td width="64">
        <input asp-for="IsDeleted" type="hidden" />
        <div class="d-flex">
            <a class="btn btn-danger delete-person">
                <i class="fas fa-trash" style="color: white"></i>
            </a>
        </div>
    </td>
</tr>