@model DotNetFlicks.ViewModels.Movie.MoviesViewModel

@{
    ViewBag.Title = "My Movies";
}

<ul class="nav nav-pills nav-fill mb-3" id="pills-tab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="pills-all-tab" data-toggle="pill" href="#pills-all" role="tab" aria-controls="pills-all" aria-selected="true">All</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="pills-library-tab" data-toggle="pill" href="#pills-library" role="tab" aria-controls="pills-library" aria-selected="false">Library</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="pills-rentals-tab" data-toggle="pill" href="#pills-rentals" role="tab" aria-controls="pills-rentals" aria-selected="false">Rentals</a>
    </li>
</ul>
<div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-all" role="tabpanel" aria-labelledby="pills-all-tab">
        <div class="d-flex justify-content-end mb-5">
            <h1 class="mr-auto">@ViewBag.Title <small>(@Model.Movies.Count)</small></h1>
            <partial name="_MovieSorter" />
        </div>

        <div class="container-fluid">
            <div class="row">
                @foreach (var movie in Model.Movies)
                {
                    @Html.DisplayFor(x => movie, "MovieCard")
                }
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="pills-library" role="tabpanel" aria-labelledby="pills-library-tab">
        <div class="d-flex justify-content-end mb-5">
            <h1 class="mr-auto">@ViewBag.Title <small>(@Model.Movies.Count)</small></h1>
            <partial name="_MovieSorter" />
        </div>

        <div class="container-fluid">
            <div class="row">
                @foreach (var movie in Model.Movies.Where(x => x.PurchaseDate.HasValue))
                {
                    @Html.DisplayFor(x => movie, "MovieCard")
                }
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="pills-rentals" role="tabpanel" aria-labelledby="pills-rentals-tab">
        <div class="d-flex justify-content-end mb-5">
            <h1 class="mr-auto">@ViewBag.Title <small>(@Model.Movies.Count)</small></h1>
            <partial name="_MovieSorter" />
        </div>

        <div class="container-fluid">
            <div class="row">
                @foreach (var movie in Model.Movies.Where(x => x.RentEndDate.HasValue))
                {
                    @Html.DisplayFor(x => movie, "MovieCard")
                }
            </div>
        </div>
    </div>
</div>