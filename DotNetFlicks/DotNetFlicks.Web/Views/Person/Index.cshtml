@using DotNetFlicks.Common.Configuration;

@model PaginatedList<DotNetFlicks.ViewModels.Person.PersonViewModel>

@{
    ViewData["Title"] = "People";
}

<div class="d-flex mb-5">
    <h1>@ViewData["Title"] <small>(@Model.TotalCount)</small></h1>
    <a class="btn btn-primary ml-auto my-auto" asp-controller="Person" asp-action="Edit">New</a>
</div>

<div>
    <partial name="_SearchToolbar" />

    <table class="table">
        <thead>
            <tr>
                <th class="d-table-cell">
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Name</a>
                </th>
                <th class="d-none d-md-table-cell">
                    <h5>Image</h5>
                </th>
                <th class="d-none d-md-table-cell">
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["RolesSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Roles</a>
                </th>
                <th width="116"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model)
            {
                <tr>
                    <td class="d-table-cell align-middle">
                        <a asp-controller="Person" asp-action="View" asp-route-id="@person.Id" class="custom-link">
                            @Html.DisplayFor(x => person.Name)
                        </a>
                    </td>

                    <td class="d-none d-md-table-cell align-middle">
                        @if (!string.IsNullOrEmpty(person.ImageUrl))
                        {
                            <button type="button" class="btn btn-secondary" data-toggle="modal" data-target=".image-modal" data-title="@person.Name" data-img-src="@person.ImageUrl">
                                <i class="fas fa-image"></i>
                            </button>
                        }
                    </td>
                    <td class="d-none d-md-table-cell">
                        <button type="button" class="btn btn-secondary" data-toggle="tooltip" data-html="true" title="@person.RolesTooltip">
                            @person.Roles.Count
                        </button>
                    </td>
                    <td>
                        <div class="d-flex">
                            <a class="btn btn-primary ml-2" asp-controller="Person" asp-action="Edit" asp-route-id="@person.Id">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-primary ml-2" asp-controller="Person" asp-action="Delete" asp-route-id="@person.Id">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="modal fade image-modal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title"></h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center">
                    <img alt="Image" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>

    <partial name="_PaginationToolbar" />
</div>