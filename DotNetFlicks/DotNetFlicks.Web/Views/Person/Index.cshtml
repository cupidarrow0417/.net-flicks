@{
    ViewBag.Title = "People";
}

<div class="d-flex mb-5">
    <h1>@ViewBag.Title <small>(12)</small></h1>
    <a class="btn btn-primary ml-auto my-auto" asp-controller="Person" asp-action="Edit">New</a>
</div>

<div>
    <table class="table people-data-table">
        <thead>
            <tr>
                <th class="d-table-cell"><h5>Name</h5></th>
                <th class="d-none d-md-table-cell"><h5>Image</h5></th>
                <th class="d-none d-md-table-cell"><h5>Roles</h5></th>
                <th width="116"></th>
            </tr>
        </thead>
        @* The table rows aren't needed here because the data is loaded using DataTables AJAX *@
    </table>

    <div class="modal fade image-modal" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title"></h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center">
                    <img alt="Image" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>
</div>
