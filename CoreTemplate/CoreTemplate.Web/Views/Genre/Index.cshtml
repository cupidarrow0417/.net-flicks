@model CoreTemplate.ViewModels.Genre.GenresViewModel

@{
    ViewBag.Title = "Genres";
}

<div class="btn-toolbar float-right">
    @Html.ActionLink("New", "Edit", "Genre", null, new { @class = "btn btn-primary" })
</div>
<h1>@ViewBag.Title</h1>

<br /><br />

<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th><h5>@Html.DisplayNameFor(x => Model.Genres.FirstOrDefault().Name)</h5></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model.Genres)
            {
                <tr>
                    <td style="vertical-align: middle">@Html.DisplayFor(x => i.Name)</td>
                    <td>
                        <div class="btn-toolbar float-right">
                            <a class="btn btn-primary" style="margin-left: 10px" asp-area="" asp-controller="Genre" asp-action="Edit" asp-route-id="@i.Id">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-primary" style="margin-left: 10px" asp-area="" asp-controller="Genre" asp-action="Delete" asp-route-id="@i.Id">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
