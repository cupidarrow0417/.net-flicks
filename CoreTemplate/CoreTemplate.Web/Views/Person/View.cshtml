@using CoreTemplate.Common.Helpers

@model CoreTemplate.ViewModels.Person.PersonViewModel

@{
    ViewBag.Title = Model.FirstName + " " + Model.LastName;
}

<div class="jumbotron" style="padding: 32px">
    <div class="row">
        <div class="col-md-4">
            <img src=@Model.ImageUrl class="img-fluid" />
        </div>
        <div class="col-md-8">
            <h1 class="display-4">@ViewBag.Title</h1>
            <hr class="my-4">
            <p><strong>Age@(Model.DeathDate.HasValue ? " at Death" : ""): </strong>@Html.DisplayFor(x => x.Age)</p>
            <p><strong>Born: </strong>@Model.BirthDate.ToCustomDateString()</p>
            @if (Model.DeathDate.HasValue)
            {
                <p><strong>Died: </strong>@Model.DeathDate.Value.ToCustomDateString()</p>
            }
            @if (!string.IsNullOrEmpty(Model.KnownFor))
            {
                <p><strong>Known For: </strong>@Html.DisplayFor(x => x.KnownFor)</p>
            }
            <p><strong>Credits: </strong>@Html.DisplayFor(x => x.Roles.Count)</p>
        </div>
    </div>
</div>

@foreach (var category in Model.Roles.GroupBy(x => x.Category).OrderByDescending(x => x.Count()))
{
    var categoryName = category.First().Category;

    <div class="card role-card">
        <div class="card-header bg-primary text-white collapse-card" data-toggle="collapse" aria-expanded="true" href="#collapse-@(categoryName)">
            <h5 class="card-title mb-0">
                @categoryName <i class="btn-toolbar float-right align-middle fas fa-chevron-up"></i>
            </h5>
        </div>
        <div class="card-body py-0 collapse show" id="collapse-@(categoryName)">
            <table class="table">
                @foreach (var role in category)
                {
                    <tr class="row">
                        <td class="col-md-1">@role.MovieYear</td>
                        <td class="col-md-1"><i class="far fa-circle fa-xs"></i></td>
                        <td class="col-md-10"><strong>@role.MovieName</strong> (@role.Role)</td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <br />
}

