@model CoreTemplate.ViewModels.Person.PersonViewModel

@{
    ViewBag.Title = Model.Id > 0 ? string.Format("Edit {0} {1}", Model.FirstName, Model.LastName) : "New Person";
}

<h1>@ViewBag.Title</h1>
<br /><br />

<form asp-controller="Person" asp-action="Edit" method="post" class="form-horizontal" role="form">
    <div class="container">
        <div class="form-group">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl" class="control-label"></label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <br /><br />

        <div class="form-group">
            <button class="btn btn-primary" type="submit">Save</button>
            <br /><br />
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</form>
