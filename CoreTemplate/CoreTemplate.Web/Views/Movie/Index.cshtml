@model CoreTemplate.Managers.ViewModels.Movie.MoviesViewModel

@{
  ViewBag.Title = "Movies";
}

<div class="page-header">
    <div class="btn-toolbar pull-right">
        @Html.ActionLink("New", "Edit", "Movie", null, new { @class = "btn btn-primary" })
    </div>
    <h2>@ViewBag.Title</h2>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th><h5>@Html.DisplayNameFor(x => Model.Movies.FirstOrDefault().Name)</h5></th>
                <th><h5>@Html.DisplayNameFor(x => Model.Movies.FirstOrDefault().Genre)</h5></th>
                <th><h5>@Html.DisplayNameFor(x => Model.Movies.FirstOrDefault().Director)</h5></th>
                <th><h5>@Html.DisplayNameFor(x => Model.Movies.FirstOrDefault().Runtime)</h5></th>
                <th><h5>@Html.DisplayNameFor(x => Model.Movies.FirstOrDefault().Year)</h5></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model.Movies)
            {
                <tr>
                    <td style="vertical-align: middle">@Html.DisplayFor(x => i.Name)</td>
                    <td style="vertical-align: middle">@Html.DisplayFor(x => i.Genre)</td>
                    <td style="vertical-align: middle">@Html.DisplayFor(x => i.Director)</td>
                    <td style="vertical-align: middle">@Html.DisplayFor(x => i.Runtime)</td>
                    <td style="vertical-align: middle">@Html.DisplayFor(x => i.Year)</td>
                    <td>
                        <div class="btn-toolbar pull-right">
                            @Html.ActionLink("", "Edit", "Movie", new { id = i.Id }, new { @class = "btn btn-default glyphicon glyphicon-pencil" })
                            @Html.ActionLink("", "Delete", "Movie", new { id = i.Id }, new { @class = "btn btn-default glyphicon glyphicon-trash" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
