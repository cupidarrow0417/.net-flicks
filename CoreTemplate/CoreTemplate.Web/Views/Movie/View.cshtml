@using CoreTemplate.Common.Helpers

@model CoreTemplate.ViewModels.Movie.MovieViewModel

@{
    ViewBag.Title = Model.Name;
}

<div class="jumbotron" style="padding: 32px">
    <div class="row">
        <div class="col-md-4 text-center">
            <img src=@Model.ImageUrl class="img-fluid jumbo-image" />
        </div>
        <div class="col-md-8">
            <h1 class="display-4">@ViewBag.Title</h1>
            <hr class="my-4">
            <p>@Model.Description</p>
            <br />
            <p>
                <strong>Genres: </strong>
                @foreach (var genre in Model.Genres)
                {
                    <a class="badge badge-secondary" asp-controller="Genre" asp-action="View" asp-route-id="@genre.Id">@genre.Name</a>
                }
            </p>
            <p><strong>Release Date: </strong>@Model.ReleaseDate.ToCustomDateString()</p>
            <p><strong>Runtime: </strong>@Html.DisplayFor(x => x.Runtime)</p>
            <p class="lead">
                <a class="btn btn-primary btn-lg" href="#" role="button">Rent ($@Model.RentCost)</a>
                <a class="btn btn-primary btn-lg" href="#" role="button">Buy ($@Model.PurchaseCost)</a>
                <a class="btn btn-primary btn-lg" href="#" role="button">Watch</a>
            </p>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Cast <small>(@Html.DisplayFor(x => x.Cast.Count))</small></h2>
            <br />

            <div class="card role-card">
                <div class="card-header bg-primary text-white collapse-card" data-toggle="collapse" aria-expanded="true" href="#collapse-cast">
                    <h5 class="card-title mb-0">
                        Cast <small>(@Model.Cast.Count())</small><i class="btn-toolbar float-right fas fa-chevron-up" style="margin-top: 2px;"></i>
                    </h5>
                </div>
                <div class="card-body py-0 collapse show" id="collapse-cast">
                    <table class="table mb-0">
                        @foreach (var castMember in Model.Cast)
                        {
                            <tr class="row">
                                <td class="col-md-6 align-middle">
                                    <strong><a asp-controller="Person" asp-action="View" asp-route-id="@castMember.PersonId" style="color: black;">@castMember.PersonName</a></strong>
                                </td>
                                <td class="col-md-6 align-middle">
                                    @castMember.Role
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <h2>Crew <small>(@Html.DisplayFor(x => x.Crew.Count))</small></h2>
            <br />

            @foreach (var department in Model.Crew.GroupBy(x => x.Category))
            {
                var departmentName = department.First().Category;

                <div class="card role-card">
                    <div class="card-header bg-primary text-white collapse-card" data-toggle="collapse" aria-expanded="true" href="#collapse-@(departmentName)">
                        <h5 class="card-title mb-0">
                            @departmentName <small>(@department.Count())</small><i class="btn-toolbar float-right fas fa-chevron-up" style="margin-top: 2px;"></i>
                        </h5>
                    </div>
                    <div class="card-body py-0 collapse show" id="collapse-@(departmentName)">
                        <table class="table mb-0">
                            @foreach (var crewMember in department)
                            {
                                <tr class="row">
                                    <td class="col-md-6 align-middle">
                                        <strong><a asp-controller="Person" asp-action="View" asp-route-id="@crewMember.PersonId" style="color: black;">@crewMember.PersonName</a></strong>
                                    </td>
                                    <td class="col-md-6 align-middle">
                                        @crewMember.Role
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
                <br />
            }
        </div>
    </div>
</div>